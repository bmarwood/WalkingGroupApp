<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teal.a276.walkinggroup.activities.CreateGroup"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/createNewGroupTv"
        android:layout_width="165dp"
        android:layout_height="27dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="20dp"
        android:text="@string/create_new_group"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="97dp" />

    <Button
        android:id="@+id/meetingMapBtn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="28dp"
        android:text="@string/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createGroupEmailEdit"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="72dp" />

    <TextView
        android:id="@+id/createGroupNameTv"
        android:layout_width="83dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:text="@string/group_name"
        app:layout_constraintEnd_toStartOf="@+id/createGroupNameEdit"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createNewGroupTv"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/createLeadersEmailTv"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:text="@string/leader_s_email"
        app:layout_constraintEnd_toStartOf="@+id/createGroupEmailEdit"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createGroupNameTv"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="28dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:text="@string/meeting_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/meetingMapBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createLeadersEmailTv"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="37dp" />

    <EditText
        android:id="@+id/createGroupNameEdit"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createNewGroupTv"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/createGroupEmailEdit"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createGroupNameEdit"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="12dp" />

    <Button
        android:id="@+id/createNewGroupBtn"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="8dp"
        android:text="@string/create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
