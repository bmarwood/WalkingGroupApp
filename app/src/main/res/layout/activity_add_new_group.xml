<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teal.a276.walkinggroup.activities.AddNewGroup">

    <Button
        android:id="@+id/addGroupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="141dp"
        android:layout_marginStart="142dp"
        android:text="@string/add_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/groupNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="54dp"
        android:text="@string/group_name"
        app:layout_constraintEnd_toStartOf="@+id/groupNameEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createGroupTv" />

    <TextView
        android:id="@+id/meetingLocationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:text="@string/meeting_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupNameTv" />

    <TextView
        android:id="@+id/destinationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="204dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="73dp"
        android:text="@string/destination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetingLocationTv" />

    <EditText
        android:id="@+id/groupNameEdit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createGroupTv" />

    <TextView
        android:id="@+id/createGroupTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="121dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="25dp"
        android:text="@string/create_group"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/meetingLatEdit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/lat"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/destLatEdit"
        app:layout_constraintEnd_toStartOf="@+id/meetingLngEdit"
        app:layout_constraintStart_toEndOf="@+id/meetingLocationTv" />

    <EditText
        android:id="@+id/meetingLngEdit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="199dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/lng"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/destLngEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meetingLatEdit"
        app:layout_constraintTop_toBottomOf="@+id/groupNameEdit"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/destLatEdit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginBottom="98dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/lat"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/addGroupBtn"
        app:layout_constraintEnd_toStartOf="@+id/destLngEdit"
        app:layout_constraintStart_toEndOf="@+id/destinationTv" />

    <EditText
        android:id="@+id/destLngEdit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/lng"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
