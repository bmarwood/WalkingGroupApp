<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_default</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">?android:attr/colorForeground</item>
    </style>

    <style name="BlueBox" parent="android:Theme.Material.Light.DarkActionBar" >
        <item name="android:windowBackground">@drawable/background_blue_box</item>
        <item name="android:colorPrimary">@color/primary_material_dark</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
    </style>

    <style name="GreenBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_green_box</item>
        <item name="android:navigationBarColor">@android:color/holo_green_dark</item>
    </style>
</resources>