<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_default</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="BlueBox" parent="AppTheme" >
        <item name="android:windowBackground">@drawable/background_blue_box</item>
        <item name="colorPrimary">@color/blueColorPrimary</item>
        <item name="colorAccent">@color/blueColorAccent</item>
        <item name="colorPrimaryDark">@color/blueColorPrimaryDark</item>
        <!--<item name="colorForeground">@color/blueColorForeground</item>-->
        <!--<item name="navigationBarColor">@color/blueColorForeground</item>-->
    </style>

    <!-- app/src/main/res/values/styles.xml -->
    <style name="BlueBox.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlueBox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="BlueBox.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="PurpleBox" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:windowBackground">@drawable/background_purple_box</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="GreenBox" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@drawable/background_green_box</item>

    </style>

    <style name="BlueWave" parent="BlueBox" >
        <item name="android:windowBackground">@drawable/background_blue_wave</item>
    </style>

    <style name="PurpleWave" parent="PurpleBox" />

    <style name="GreenWave" parent="GreenBox" />

    <style name="BlueCircle" parent="BlueBox" >
        <item name="android:windowBackground">@drawable/background_blue_circle</item>
    </style>

    <style name="PurpleCircle" parent="PurpleBox" />

    <style name="GreenCircle" parent="greenVar" />

    <style name="greenVar" parent="GreenCircle" >
        <item name="colorAccent">@color/accent_material_light_1</item>
    </style>

    <style name="GreenCircles" parent="GreenWave" >
        <item name="android:windowBackground">@drawable/background_green_circle</item>
    </style>

    <!-- app/src/main/res/values/styles.xml -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Dark theme base colours -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
    </style>

    <!-- app/src/main/res/values/styles.xml -->
    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat" />
</resources>
